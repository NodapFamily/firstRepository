<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />


        <import type="android.text.TextUtils" />


        <variable
            name="click"
            type="com.example.nodap.bindingadapter.IRecyclerViewItemClick" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_check_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@color/cardview_dark_background"/>

        <ImageView
            android:id="@+id/iv_check_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@color/cardview_dark_background"
            app:layout_constraintBottom_toBottomOf="@id/iv_check_color"
            app:layout_constraintEnd_toEndOf="@id/iv_check_color"
            app:layout_constraintStart_toStartOf="@id/iv_check_color"
            app:layout_constraintTop_toTopOf="@id/iv_check_color" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@color/cardview_dark_background"
            app:layout_constraintBottom_toBottomOf="@id/iv_check_color"
            app:layout_constraintEnd_toEndOf="@id/iv_check_color"
            app:layout_constraintStart_toStartOf="@id/iv_check_color"
            app:layout_constraintTop_toTopOf="@id/iv_check_color" />

        <TextView
            android:id="@+id/tv_calendar_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="2sp"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_check_color"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="moimoi@gmail.com" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>